{
  "name": "record-kerrang",
  "description": "Record Kerrang Radio and store in Dropbox",
  "keywords": [
    "laravel"
  ],
  "repository": "https://github.com/michaelvickersuk",
  "env": {
    "DROPBOX_TOKEN": {
      "description": "Token to access Dropbox",
      "required": true
    },
    "STREAM_URL": {
      "description": "Address of the radio stream",
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "advanced-scheduler"
  ],
  "buildpacks": [
    {
      "url": "heroku/python",
      "url": "heroku-community/apt"
    }
  ]
}
